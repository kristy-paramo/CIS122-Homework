namespace DominionOfKings
{
    public class GreatestKingdom

    {
        static void Main(string[] args)
        {
            // asks user to enter how many estates, duchies, and provinces they have
            Console.WriteLine("How many estates do you rule?: ");

            // converts user input to integer
            int estateTotal = Convert.ToInt32(Console.ReadLine());

            // multiples the # of estates the user has by the points its worth
            int estatePoints = estateTotal * 1;

            Console.WriteLine("How many duchies do you rule?: ");

            int duchiesTotal = Convert.ToInt32(Console.ReadLine());

            int duchiesPoints = duchiesTotal * 3;

            Console.WriteLine("How many provinces do you rule?: ");

            int provinceTotal = Convert.ToInt32(Console.ReadLine());

            int provincePoints = provinceTotal * 6;

            // adds the total points the king is worth 
            int totalScore = estatePoints + duchiesPoints + provincePoints;


            Console.WriteLine("Your point total is: " + totalScore);

            
        }
    }
}
